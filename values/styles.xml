    <style name="OverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">

    </style>

    <style name="AlertDialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <!-- Used for the background
        <item name="android:background">@color/gs_primary_light</item> -->
        <item name="android:background">?attr/gsColorPrimaryLight</item>
    </style>

    <style name="DialogSectionStyle">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:background">?attr/gsColorPrimary</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">?attr/gsColorMidtoneDark</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">?attr/gsColorPrimaryLight</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/gsColorSecondary</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/gsColorPrimary</item>
        <item name="android:textColor">?attr/gsColorSecondary</item>
        <item tools:targetApi="21" name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">?attr/gsColorPrimaryLight</item>
        <item name="android:textColor">?attr/gsColorSecondary</item>
    </style>

    <style name="PopupMenuTextSmall" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">?attr/gsColorSecondary</item>
    </style>

    <style name="PopupMenuTextLarge" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">?attr/gsColorSecondary</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:background">?attr/buttonSelector</item>
        <item tools:targetApi="21" name="android:elevation">@dimen/fab_elevation</item>
        <item tools:targetApi="21" name="android:stateListAnimator">@drawable/button_selector</item>
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="list_item_text">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">?attr/gsColorSecondary</item>
    </style>

    <style name="list_item_right">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?attr/gsColorMidtoneLight</item>
    </style>

    <style name="list_item_container">
    </style>

    <style name="list_item_desc">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">?attr/gsColorMidtoneLight</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="list_item_layout">
        <item name="android:background">?attr/gsColorPrimaryLight</item>
    </style>

    <style name="default_button">
        <item name="android:background">?attr/buttonSelector</item>
        <item name="android:textColor">?attr/gsColorLight</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="default_text">
        <item name="android:background">?attr/gsColorAccent</item>
        <item name="android:textColor">?attr/gsColorSecondary</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_input">
    </style>

    <style name="type_spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">?attr/gsColorAccent</item>
        <item name="android:drawableRight">@drawable/ic_action_options</item>
    </style>

    <style name="spinner_item">
        <item name="android:padding">18dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">?attr/gsColorSecondary</item>
    </style>

    <style name="delete_text">
        <item name="android:padding">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">?attr/gsColorSecondary</item>
    </style>

    <style name="dialog_title_text">
        <item name="android:textColor">?attr/gsColorSecondary</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="dialog_edit_text">
        <item name="android:textColor">?attr/gsColorSecondary</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="radio_style">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
