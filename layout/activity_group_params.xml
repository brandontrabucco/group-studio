<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <EditText
        android:textColor="?attr/gsColorSecondary"
        android:id="@+id/enter_group_name"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:inputType="textPersonName"
        android:hint="Enter a Name"
        android:textColorHint="?attr/gsColorSecondaryFade"
        android:layout_margin="20dp"/>

    <EditText
        android:textColor="?attr/gsColorSecondary"
        android:id="@+id/enter_group_desc"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:inputType="text"
        android:hint="@string/desc_hint"
        android:textColorHint="?attr/gsColorSecondaryFade"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:hint="@string/name_hint">

        <Button
            style="@style/default_button"
            android:id="@+id/confirm_new_group"
            android:layout_margin="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm_text"/>

        <Button
            style="@style/default_button"
            android:id="@+id/cancel_new_group"
            android:layout_margin="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_text"/>

        </LinearLayout>

</LinearLayout>